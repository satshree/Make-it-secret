{
  "name": "make-it-secret",
  "version": "1.1.0",
  "author": "Satshree Shrestha",
  "description": "Encrypt any files.",
  "private": true,
  "main": "public/electron.js",
  "build": {
    "appId": "electron.react",
    "productName":"Make It Secret",
    "files": [
      "node_modules/",
      "build/",
      "public/",
      "package.json"
    ],
    "asar":false,
    "win": {
      "icon": "src/assets/lock.png",
      "publisherName": "Satshree Shrestha",
      "target": [
        {
          "target":"nsis",
          "arch":[
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "directories": {
      "buildResources": "resources"
    }
  },
  "homepage": "./",
  "dependencies": {
    "@sweetalert/with-react": "^0.1.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "bootstrap": "^4.4.1",
    "jquery": "^3.5.0",
    "react": "^16.13.1",
    "react-bootstrap": "^1.0.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "sweetalert": "^2.1.2"
  },
  "devDependencies": {
    "child_process": "^1.0.2",
    "electron": "^8.2.3",
    "electron-builder": "^22.5.1",
    "electron-installer-windows": "^3.0.0",
    "electron-packager": "^14.2.1",
    "electron-wix-msi": "^2.2.0"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-package": "electron-packager . make-it-secret --platform=win32 --arch=x64 --overwrite",
    "electron-build": "electron-builder",
    "electron-start": "electron ."
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
